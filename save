  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <script>
    
    const ctx = document.getElementById('myChart');
  
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
        datasets: [{
          label: 'IMDB rating',
          data: [9, 8.8, 7, 5, 2, 3],
          borderWidth: 1
        }]
      },
      options: {
        indexAxis: 'y',
        scales: {
          y: {
            beginAtZero: true,
          }
        }
      }
    });
  </script>


